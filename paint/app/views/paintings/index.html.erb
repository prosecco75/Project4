<div class="container">
  <h2><%= @paintings.count %> Paintings found</h2>
  <div id="paintings">
    <% @paintings.each do |painting| %>
    <div class="col-sm-6 col-md-4 painting">
      <div class="thumbnail">
        <%= image_tag(painting.url(:medium)) %>
        <div class="caption">
          <div class="clear">
            <button type="button" class="btn btn-default btn-lg pull-right">
              <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
            </button>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>